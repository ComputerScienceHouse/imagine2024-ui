###########################
#
#   Define Screens:
#
###########################

ScreenManager:
    id: sm

    StartScreen:
        md_bg_color: self.theme_cls.backgroundColor
        name: 'Start'

        MDLabel:
            text: 'Start'

        MDButton:
            style: 'filled'
            on_press: root.current = 'Info'
            
            MDButtonText:
                text:'Go to Info'

    CartScreen:
        md_bg_color: self.theme_cls.backgroundColor
        name: 'Cart'

        MDLabel:
            text: 'Cart'

    InfoScreen:
        md_bg_color: self.theme_cls.backgroundColor
        name: 'Info'

        GridLayout:
            cols:2

            MemberCard:
                name: 'Wilson'
                job_title: 'Cool Guy'
                major: 'CS'

            MemberCard:
                name: 'Sahil'
                job_title: 'Cool Guy'
                major: 'CS'

            MemberCard:
                name: 'Jason'
                job_title: 'Cool Guy'
                major: 'CS'

            MemberCard:
                name: 'Isaac'
                job_title: 'Cool Guy'
                major: 'CS'

###########################
#
#   Define Custom Widgets:
#
###########################

<MemberCard>
    orientation: 'vertical'
    size_hint: None, None
    size: "144dp", "170dp"
        
    MDLabel:
        font_style: "Display"
        role: "small"
        text: root.name
        color: "black"
        halign: "center"
        padding: "2dp", "2dp"

    MDLabel:
        font_style: "Title"
        role: "small"
        text: root.job_title
        color: "black"
        halign: "center"
        padding: "4dp", "4dp"

    MDLabel:
        font_style: "Title"
        role: "medium"
        text: root.major
        color: "black"
        halign: "center"
        padding: "4dp", "4dp"